{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "WebWorker"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/*"]
    },

    "types": ["vite/client", "vite-plugin-pwa/client"]
  },
  "include": ["src", "../shared", "src/vite-env.d.ts"]
}
